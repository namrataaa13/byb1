<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Book Info...  "
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/textviewbg"
                android:paddingLeft="10dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dOnePic"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FF000000"
                android:layout_marginTop="35dp"
                app:civ_border_width="2dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/dOneName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Book Name"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="8dp"
                    />

                <TextView
                    android:id="@+id/dOneId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Book ID"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/dOneCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Book Category"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/dOneCategoryid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Book Category ID"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/dOnePincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is pincode"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/dOneEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Email Name"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/dOneMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Mobile no"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/dOneCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is City"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/dOneOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is book options"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="8dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>